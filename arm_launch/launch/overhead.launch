<?xml version="1.0"?>
<launch>
  <arg name="display" default="true" />

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <rosparam command="load" file="$(find arm_config)/config/overhead.yml"/>
  </node>

  <group ns="usb_cam" >
    <node pkg="image_proc" type="image_proc" name="image_proc" args="image:=image_raw"/>
    <include file="$(find lunabot_perception)/launch/apriltag.launch">
      <arg name="camera_frame" value="overhead" />
    </include>
  </group>

  <node if="$(arg display)" name="image_view" pkg="image_view" type="image_view"
        respawn="false" output="screen">
    <remap from="image" to="/usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>

</launch>
